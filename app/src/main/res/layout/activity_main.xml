<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Pitch"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bar_pitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.2"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seek_bar_pitch"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:max="100"
            android:min="20"
            android:progress="60"
            android:scrollbarStyle="outsideOverlay" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bar_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.4"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seek_bar_speed"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="6"
            android:max="100"
            android:min="20"
            android:progress="70"
            android:scrollbarStyle="outsideOverlay" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:clickable="true"
            android:onClick="edit_table"
            android:id="@+id/btn_kakaoIgnores"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="Kakao Ignores" />
        <TextView
            android:clickable="true"
            android:onClick="edit_table"
            android:id="@+id/btn_kakaoPersons"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="Kakao Persons" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:clickable="true"
            android:onClick="edit_table"
            android:id="@+id/btn_packageIgnores"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="Package Ignores" />
        <TextView
            android:clickable="true"
            android:onClick="edit_table"
            android:id="@+id/btn_packageTables"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="Package Tables" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:clickable="true"
            android:onClick="edit_table"
            android:id="@+id/btn_smsIgnores"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="SMS Ignores" />
        <TextView
            android:clickable="true"
            android:onClick="edit_table"
            android:id="@+id/btn_systemIgnores"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="System Ignores" />
    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save Table" />

    <EditText
        android:id="@+id/text_table"
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="400sp"
        android:gravity="center_horizontal"
        android:inputType="text|textMultiLine"
        android:text="Active say Table List"
        android:textAlignment="center"
        android:textSize="16sp" />

</LinearLayout>
